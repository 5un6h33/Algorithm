#include<stdio.h>
#define MAX 100001
#define MOD 9901

int n;
int dp[MAX][3];

int main(void)
{
  scanf("%d", &n);
  
  dp[1][0] = 1;
  dp[1][1] = 1;
  dp[1][2] = 1;

  for(int i = 2; i <= n; i++)
  {
    dp[i][0] = dp[i - 1][0] + dp[i - 1][1] + dp[i - 1][2];
    dp[i][1] = dp[i - 1][0] + dp[i - 1][2];
    dp[i][2] = dp[i - 1][0] + dp[i - 1][1];

    dp[i][0] %= MOD;
    dp[i][1] %= MOD;
    dp[i][2] %= MOD;
  }

  printf("%d\n", (dp[n][0] + dp[n][1] + dp[n][2]) % MOD);
  
  return 0;
}
